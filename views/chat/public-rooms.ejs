<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>
    <%- include('../partials/navbar') %>
    
    <main class="public-rooms-page">
        <div class="public-rooms-container">
            <div class="public-rooms-header">
                <h1><i class="fas fa-globe"></i> Explore Public Rooms</h1>
                <p>Discover and join public chat rooms</p>
            </div>

            <% if (rooms.length === 0) { %>
                <div class="empty-state">
                    <i class="fas fa-search"></i>
                    <h2>No public rooms found</h2>
                    <p>Be the first to create a public room!</p>
                    <a href="/chat/create-room" class="btn btn-primary">Create Room</a>
                </div>
            <% } else { %>
                <div class="rooms-grid">
                    <% rooms.forEach(room => { %>
                        <div class="room-card-public">
                            <div class="room-avatar">
                                <img src="https://ui-avatars.com/api/?name=<%= encodeURIComponent(room.name) %>&background=10b981&color=fff" alt="<%= room.name %>">
                            </div>
                            <div class="room-info">
                                <h3><%= room.name %></h3>
                                <p class="room-description"><%= room.description || 'No description' %></p>
                                <p class="room-meta-info">
                                    <span><i class="fas fa-users"></i> <%= room.members.length %> members</span>
                                    <span><i class="fas fa-user"></i> Created by <%= room.creator?.username || 'Unknown' %></span>
                                </p>
                            </div>
                            <div class="room-actions">
                                <% if (userRoomIds.includes(room._id.toString())) { %>
                                    <a href="/chat/room/<%= room._id %>" class="btn btn-primary">
                                        <i class="fas fa-comments"></i>
                                        Open Chat
                                    </a>
                                <% } else { %>
                                    <form action="/chat/join-room/<%= room._id %>" method="POST">
                                        <button type="submit" class="btn btn-outline">
                                            <i class="fas fa-sign-in-alt"></i>
                                            Join Room
                                        </button>
                                    </form>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>

            <div class="back-link">
                <a href="/chat"><i class="fas fa-arrow-left"></i> Back to My Rooms</a>
            </div>
        </div>
    </main>
</body>
</html>
